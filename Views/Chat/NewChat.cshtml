@{
    Layout = "_Layout";
    ViewData["Title"] = "Создать чат";
}
@model Chat

<div class="main-space">
    <div class="pfp-big"></div>
    <form method="post" asp-action="CreateChat">
        <input class="name-input" type="text" name="title" placeholder="Название" />
        <input class="name-input" type="text" name="shortDesc" placeholder="Краткое описание"/>
        <textarea class="desc-input" name="longDesc" placeholder="Полное описание"></textarea>
        <div class="lower-space">
            <table>
                <tr>
                    <td>
                        <div class="column-scrollable">
                            <div class="column-title">Соседи:</div>
                            <div class="column-list">TODO</div>
                        </div>
                    </td>
                    <td>
                        <div class="column-scrollable">
                            <div class="column-title">Модераторы:</div>
                            <div class="column-list">TODO</div>
                        </div>
                    </td>
                    <td>
                        <div class="column">
                            <button class="generic-btn">Создать</button>
                            <button class="generic-btn">Отмена</button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </form>
</div>

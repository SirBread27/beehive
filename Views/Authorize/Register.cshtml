@{
    Layout = null;
}
@model AuthModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Beehive - Регистрация</title>
</head>
<body>
    <div class="main-space">
        <p>@(ViewBag.Message ?? "")</p>
        <form asp-controller="Authorize" asp-action="AddUser" method="post">
            <table>
                <tr>
                    <td>
                        <label asp-for="Email" ></label>
                    </td>
                    <td>
                        <input type="text" asp-for="Email" />
                    </td>
                    <span asp-validation-for="Email" />
                </tr>
                <tr>
                    <td>
                        <label asp-for="Name"></label>
                    </td>
                    <td>
                        <input type="text" asp-for="Name" />
                    </td>
                    <span asp-validation-for="Name" />
                </tr>
                <tr>
                    <td>
                        <label asp-for="Password"></label>
                    </td>
                    <td>
                        <input type="password" asp-for="Password" />
                    </td>
                    <span asp-validation-for="Password" />
                </tr>
                <tr>
                    <td>
                        <label asp-for="RepeatPassword"></label>
                    </td>
                    <td>
                        <input type="password" asp-for="RepeatPassword" />
                    </td>
                </tr>
            </table>
            <p>
                <input type="submit" value="Зарегистрироваться" />
            </p>
        </form>
        <table>
            <tr>
                <td>
                    <a class="auth-link" asp-action="Login">Уже есть аккаунт?</a>
                </td>
            </tr>
        </table>
    </div>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
